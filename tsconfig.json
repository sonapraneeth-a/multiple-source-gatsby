{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "lib": ["dom", "es2015", "es2017"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["./packages/**/src/**/*", "./demo/**/src/**/*"],
    "exclude": ["node_modules", "packages/**/node_modules"]
}
